{% extends 'base.html.twig' %}

{% block title %}Le repas{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mb-3">Liste des plats servis</h2>
        <div class="card-deck">
            <div class="card plats p-3" style="flex-basis: 40%;">
                <h4>Viandes</h4>
                <ul class="list-group list-group-flush">
                {% for viande in viandes %}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        {{ viande.name }}
                        <div>
                            {% if viande.isGlutenFree %}<i class="fa-light fa-bread-slice"></i>{% endif %}
                            {% if viande.isLactoseFree %}<i class="fa-solid fa-bottle-droplet" style="color: #8ebbd2;"></i>{% endif %}
                        </div>
                    </li>
                {% endfor %}
                </ul>

                <h4 class="mt-3">Poissons</h4>
                <ul class="list-group list-group-flush">
                {% for poisson in poissons %}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        {{ poisson.name }}
                        <span class="badge bg-primary rounded-pill">14</span>
                    </li>
                {% endfor %}
                </ul>
            </div>
            <div class="card garnitures p-3" style="flex-basis: 40%;">
                <h4>Garnitures</h4>
                <ul class="list-group list-group-flush">
                {% for garniture in garnitures %}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        {{ garniture.name }}
                        <span class="badge bg-primary rounded-pill">14</span>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
