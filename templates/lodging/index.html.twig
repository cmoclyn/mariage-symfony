{% extends 'base.html.twig' %}

{% block title %}Les hébergements{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mb-3">Liste (non exhaustive) des hébergements à proximité du domaine.</h2>
        <div class="card-deck">
            {% for lodging in lodgings %}
                <div class="card lodging">
                    {% if lodging.picture is not null %}<img class="card-img-top" src="/build/images/{{ lodging.picture }}" alt="Card image cap">{% endif %}
                    <div class="card-type">{{ lodging.type }}</div>
                    <div class="card-name">{{ lodging.name }}</div>
                    <div class="card-body">
                        {% if lodging.distance %}<small><i class="fa-solid fa-route"></i> {{ lodging.distance }}km</small><br />{% endif %}
                        {% if lodging.roomNumber %}<small><i class="fa-solid fa-bed"></i> {{ lodging.roomNumber }}</small><br />{% endif %}
                        {% if lodging.phoneNumber %}<small><i class="fa-solid fa-phone"></i> {{ lodging.phoneNumber|split('', 2)|join('.') }}</small><br />{% endif %}
                        {% if lodging.email %}<small><i class="fa-solid fa-at"></i> <a href="mailto:{{ lodging.email }}">{{ lodging.email }}</a></small><br />{% endif %}
                        {% if lodging.website %}<small><i class="fa-solid fa-link"></i> <a href="{{ lodging.website }}">Site web</a></small><br />{% endif %}
                        {% if lodging.address %}<small class="address">
                            <i class="fa-solid fa-location-dot"></i>
                            {% if lodging.mapsLink %}
                                <a href="{{ lodging.mapsLink }}">
                            {% endif %}
                                    {{ lodging.address|nl2br }}
                            {% if lodging.mapsLink %}
                                </a>
                            {% endif %}
                            </small>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
